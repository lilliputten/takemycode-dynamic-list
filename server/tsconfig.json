{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es5", "dom"],
    "module": "commonjs",
    "types": ["jest", "node"],
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@shared-types/*": ["./src/@shared-types/*"],
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["**/*.test.ts", "src/**/*"]
}
